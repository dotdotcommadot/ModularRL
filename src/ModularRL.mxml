<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:mxml="robotlegs.bender.mxml.*" 
			   xmlns:mvcs="robotlegs.bender.bundles.mvcs.*"
			   xmlns:config="com.dotdotcommadot.modularrl.shell.config.*"
			   xmlns:view="com.dotdotcommadot.modularrl.shell.view.*"
			   initialize="onInitialize()" >
	
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			
			private function onInitialize() : void
			{
				contextTag.contextView = FlexGlobals.topLevelApplication.systemManager;
			}
		]]>
	</fx:Script>
	
	<fx:Style source="assets/styles/globalstyles.css" />
	
	<fx:Declarations>
		<mxml:ContextBuilderTag id="contextTag">
			<config:ShellBundle />
			<config:ShellConfig />
		</mxml:ContextBuilderTag>
	</fx:Declarations>
	
	<view:Shell id="shell"
				width="100%"
				height="100%" />
	
</s:Application>