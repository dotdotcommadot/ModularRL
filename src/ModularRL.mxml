<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:mxml="robotlegs.bender.mxml.*" 
			   xmlns:mvcs="robotlegs.bender.bundles.mvcs.*"
			   xmlns:config="com.dotdotcommadot.modularrl.config.*"
			   xmlns:shell="com.dotdotcommadot.modularrl.view.shell.*" 
			   minWidth="955" minHeight="600" 
			   initialize="onInitialize()">
	
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			
			private function onInitialize() : void
			{
				contextTag.contextView = FlexGlobals.topLevelApplication.systemManager;
			}
		]]>
	</fx:Script>
	
	<fx:Style source="assets/styles/style.css" />
	
	<fx:Declarations>
		<mxml:ContextBuilderTag id="contextTag">
			<mvcs:MVCSBundle />
			<config:AppConfig />
		</mxml:ContextBuilderTag>
	</fx:Declarations>
	
	<shell:Shell id="shell"
				 width="100%"
				 height="100%" />
	
</s:Application>